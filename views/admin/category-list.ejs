<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/head') %>
</head>
<body>

    <%- include('../partials/nav') %>


    <div class="container mt-4">
        <div class="row">
            <div class="col-md-12 mt-3" >
                <% if (action != "undefined" && action == "edit") { %>
                    <div class="alert alert-success">
                        <p class="mb-0">Kategori başarıyla güncellendi.</p>
                    </div>
                <% } %>
                <% if (action != "undefined" && action == "create") { %>
                    <div class="alert alert-success">
                        <p class="mb-0">Kategori başarıyla oluşturuldu.</p>
                    </div>
                <% } %>
                <% if (action != "undefined" && action == "delete") { %>
                    <div class="alert alert-success">
                        <p class="mb-0">Kategori başarıyla silindi.</p>
                    </div> 
                <% } %>
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th scope="col">id</th>
                            <th scope="col">name</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% categories.forEach(category => { %>
                            <tr>
                                <td>
                                    <%= category.categoryid %>
                                </td>
                                <td><%= category.name %></td>
                                <td><a class="btn btn-sm btn-primary" href="/admin/categories/<%= category.categoryid %>">edit</a>
                                    <a class="btn btn-sm btn-danger" href="/admin/categories/<%= category.categoryid %>/delete">delete</a>
                                </td>
                                
                            </tr>
                         
                        <% }) %>
                    </tbody>
                </table>

            </div>
        </div>

        </div>
    

    
 

</body>
</html>

